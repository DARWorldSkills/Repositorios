<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulsocuro"
    android:orientation="vertical"
    tools:context="com.danielaburbano.stroopermartes.Resumen">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:layout_gravity="center"
      android:textColor="@color/naranja"
      android:textSize="50dp"
      android:layout_marginTop="20dp"
      android:text="Puntuación"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtpalabrasC"
            android:layout_width="match_parent"
            android:textColor="@color/naranja"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/naranja"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Palabras Correctas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtpalabrasI"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/naranja"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/naranja"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Palabras Incorrectas"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtReaccion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/naranja"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="0.0"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/naranja"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Porcentaje de reacción"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFaceook"
            android:layout_width="108dp"
            android:layout_height="98dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="81dp"
            android:layout_weight="1"
            android:background="@drawable/face" />

        <ImageButton
            android:id="@+id/btnTwitter"
            android:layout_width="91dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/twi" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:layout_weight="1">

        <ImageButton
            android:layout_width="301dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:background="@drawable/home"
            android:onClick="salir" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="salir"
            android:background="@color/naranja"
            android:textColor="@color/azulsocuro"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="Menu"/>

    </LinearLayout>



</LinearLayout>
