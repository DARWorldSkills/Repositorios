<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulsocuro"
    android:orientation="vertical"
    tools:context="com.danielaburbano.stroopermartes.Configuracion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:src="@drawable/confi" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:text="ConfiguraciÃ³n"
            android:textColor="@color/naranja"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/naranja"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Estilo de juego" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbtnTiempo"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/naranja"
                android:textSize="20dp"
                android:text="@string/tiempo"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rbtnIntentos"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/naranja"
                android:textSize="20dp"
                android:text="@string/Aciertos"
                android:layout_weight="1" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/naranja"
            android:text="Tiempo de palabra" />

        <EditText
            android:id="@+id/txtTiempoPalabra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tiempo"
            android:inputType="number"
            android:textColor="@color/naranja" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="352dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:background="@drawable/home"
            android:onClick="ir" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/naranja"
            android:onClick="salir"
            android:text="JUGAR"
            android:textColor="@color/azulsocuro"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>
